<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.22"/>
  <!-- interface-naming-policy project-wide -->
  <object class="GtkAdjustment" id="/prefs/view/display/right-margin-adjustment">
    <property name="upper">9999</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
  </object>

  <object class="GtkListStore" id="/prefs/view/color-scheme/model">
    <columns>
      <!-- column-name id -->
      <column type="gchararray"/>
      <!-- column-name name -->
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0" translatable="yes">none</col>
        <col id="1" translatable="yes">None</col>
      </row>
    </data>
  </object>

  <object class="GtkAdjustment" id="/prefs/editor/indentation/tab-width-adjustment">
    <property name="lower">1</property>
    <property name="upper">32</property>
    <property name="value">8</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
  </object>

  <object class="GtkListStore" id="/prefs/editor/indentation/tab-mode-store">
    <columns>
      <!-- column-name name -->
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0" translatable="yes">Insert Tabs</col>
      </row>
      <row>
        <col id="0" translatable="yes">Insert Spaces</col>
      </row>
    </data>
  </object>

  <object class="GtkListStore" id="/prefs/editor/home-end/smart-home-end-model">
    <columns>
      <!-- column-name id -->
      <column type="gint"/>
      <!-- column-name name -->
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0">0</col>
        <col id="1" translatable="yes">Never</col>
      </row>
      <row>
        <col id="0">1</col>
        <col id="1" translatable="yes">First key press</col>
      </row>
      <row>
        <col id="0">2</col>
        <col id="1" translatable="yes">Second key press</col>
      </row>
      <row>
        <col id="0">3</col>
        <col id="1" translatable="yes">Always</col>
      </row>
    </data>
  </object>

  <object class="GtkListStore" id="/prefs/window/toolbar/style-model">
    <columns>
      <!-- column-name style -->
      <column type="GtkToolbarStyle"/>
      <!-- column-name name -->
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0">icons</col>
        <col id="1" translatable="yes">Icons Only</col>
      </row>
      <row>
        <col id="0">text</col>
        <col id="1" translatable="yes">Text Only</col>
      </row>
      <row>
        <col id="0">both</col>
        <col id="1" translatable="yes">Text Below Icons</col>
      </row>
      <row>
        <col id="0">both-horiz</col>
        <col id="1" translatable="yes">Text Beside Icons</col>
      </row>
    </data>
  </object>

  <object class="GtkListStore" id="/prefs/window/toolbar/icon-size-model">
    <columns>
      <!-- column-name size -->
      <column type="GtkIconSize"/>
      <!-- column-name name -->
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0">inherit</col>
        <col id="1" translatable="yes">Inherit</col>
      </row>
      <row>
        <col id="0">normal</col>
        <col id="1" translatable="yes">Normal</col>
      </row>
      <row>
        <col id="0">large</col>
        <col id="1" translatable="yes">Large</col>
      </row>
    </data>
  </object>

  <object class="GtkListStore" id="/prefs/window/notebook/opening-mode-model">
    <columns>
      <!-- column-name opening mode -->
      <column type="gint"/>
      <!-- column-name name -->
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0">0</col>
        <col id="1" translatable="yes" comments="Preceded by: &quot;Open files in:&quot;">new tabs</col>
      </row>
      <row>
        <col id="0">1</col>
        <col id="1" translatable="yes" comments="Preceded by: &quot;Open files in:&quot;">new windows</col>
      </row>
      <row>
        <col id="0">2</col>
        <col id="1" translatable="yes" comments="Preceded by: &quot;Open files in:&quot;">new tabs in a new window</col>
      </row>
    </data>
  </object>



  <object class="GtkNotebook" id="/prefs/main-notebook">

    <!-- "View" tab -->
    <child>
      <object class="GtkBox" id="/prefs/view/content-area">
        <property name="vexpand">True</property>
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <property name="margin-top">6</property>
        <property name="margin-bottom">6</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <child>
          <object class="GtkFrame" id="/prefs/view/display/frame">
            <child>
              <object class="GtkBox" id="/prefs/view/display/content-area">
                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">12</property>
                <property name="margin-end">6</property>
                <property name="spacing">2</property>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Show line numbers</property>
                    <property name="action-name">app.preferences.view.show-line-numbers</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Display whitespace</property>
                    <property name="action-name">app.preferences.view.show-whitespace</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Display line endings</property>
                    <property name="action-name">app.preferences.view.show-line-endings</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkCheckButton" id="/prefs/view/display/long-line-check">
                        <property name="label" translatable="yes">Long line margin at column:</property>
                        <property name="action-name">app.preferences.view.show-right-margin</property>
                      </object>
                    </child>
                    <child>
                      <!-- add an extra packing to ensure that the binding with the checkbox takes effect
                           at initialization: this workaround is only necessary for GtkSpinButtons -->
                      <object class="GtkBox">
                        <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
                        <property name="spacing">6</property>
                        <property name="sensitive" bind-source="/prefs/view/display/long-line-check"
                                  bind-property="active" bind-flags="G_BINDING_SYNC_CREATE"/>
                        <child>
                          <object class="GtkSpinButton" id="/prefs/view/display/long-line-spin">
                            <property name="adjustment">/prefs/view/display/right-margin-adjustment</property>
                            <property name="numeric">True</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Highlight current line</property>
                    <property name="action-name">app.preferences.view.highlight-current-line</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Highlight matching brackets</property>
                    <property name="action-name">app.preferences.view.match-braces</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Wrap long lines</property>
                    <property name="action-name">app.preferences.view.word-wrap</property>
                  </object>
                </child>
              </object>
            </child>
            <child type="label">
              <object class="GtkLabel">
                <property name="label" translatable="yes">&lt;b&gt;Display&lt;/b&gt;</property>
                <property name="use-markup">True</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkFrame" id="/prefs/view/font/frame">
            <child>
              <object class="GtkGrid" id="/prefs/view/font/content-area">
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">12</property>
                <property name="margin-end">6</property>
                <property name="column-spacing">6</property>
                <property name="row-spacing">6</property>
                <child>
                  <object class="GtkCheckButton" id="/prefs/view/font/default-check">
                    <property name="label" translatable="yes">Use system monospace font</property>
                    <property name="action-name">app.preferences.view.use-default-monospace-font</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkFontButton" id="/prefs/view/font/chooser-button">
                    <property name="receives-default">True</property>
                    <property name="sensitive" bind-source="/prefs/view/font/default-check"
                              bind-property="active"
                              bind-flags="G_BINDING_SYNC_CREATE | G_BINDING_INVERT_BOOLEAN"/>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
            <child type="label">
              <object class="GtkLabel">
                <property name="label" translatable="yes">&lt;b&gt;Font&lt;/b&gt;</property>
                <property name="use-markup">True</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkFrame" id="/prefs/view/color-scheme/frame">
            <child>
              <object class="GtkBox" id="/prefs/view/color-scheme/content-area">
                <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">12</property>
                <property name="margin-end">6</property>
                <property name="spacing">2</property>
                <child>
                  <object class="GtkComboBox" id="/prefs/view/color-scheme/combo">
                    <property name="model">/prefs/view/color-scheme/model</property>
                    <property name="active">0</property>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="label">
              <object class="GtkLabel">
                <property name="label" translatable="yes">&lt;b&gt;Color scheme&lt;/b&gt;</property>
                <property name="use-markup">True</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child type="tab">
      <object class="GtkLabel">
        <property name="label" translatable="yes">View</property>
      </object>
      <packing>
        <property name="tab-fill">False</property>
      </packing>
    </child>

    <!-- "Editor" tab -->
    <child>
      <object class="GtkBox" id="/prefs/editor/content-area">
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <property name="margin-top">6</property>
        <property name="margin-bottom">6</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <property name="spacing">6</property>
        <child>
          <object class="GtkFrame" id="/prefs/editor/indentation/frame">
            <child>
              <object class="GtkGrid" id="/prefs/editor/indentation/content-area">
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">12</property>
                <property name="margin-end">6</property>
                <property name="column-spacing">6</property>
                <property name="row-spacing">6</property>
                <child>
                  <object class="GtkLabel">
                    <property name="xalign">0</property>
                    <property name="label" translatable="yes">Tab width:</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="xalign">0</property>
                    <property name="label" translatable="yes">Tab mode:</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkSpinButton" id="/prefs/editor/indentation/tab-width-spin">
                    <property name="adjustment">/prefs/editor/indentation/tab-width-adjustment</property>
                    <property name="numeric">True</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkComboBox" id="/prefs/editor/indentation/tab-mode-combo">
                    <property name="model">/prefs/editor/indentation/tab-mode-store</property>
                    <property name="active">0</property>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">0</attribute>
                      </attributes>
                    </child>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Enable automatic indentation</property>
                    <property name="action-name">app.preferences.view.auto-indent</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
            <child type="label">
              <object class="GtkLabel">
                <property name="label" translatable="yes">&lt;b&gt;Indentation&lt;/b&gt;</property>
                <property name="use-markup">True</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkFrame" id="/prefs/editor/home-end/frame">
            <child>
              <object class="GtkBox" id="/prefs/editor/home-end/content-area">
                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">12</property>
                <property name="margin-end">6</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel">
                    <property name="xalign">0</property>
                    <property name="label" translatable="yes">Detect leading/trailing whitespace:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
                    <child>
                      <object class="GtkComboBox" id="/prefs/editor/home-end/smart-home-end-combo">
                        <property name="model">/prefs/editor/home-end/smart-home-end-model</property>
                        <property name="active">0</property>
                        <property name="expand">False</property>
                        <child>
                          <object class="GtkCellRendererText"/>
                          <attributes>
                            <attribute name="text">1</attribute>
                          </attributes>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="label">
              <object class="GtkLabel">
                <property name="label" translatable="yes">&lt;b&gt;Home/End Keys&lt;/b&gt;</property>
                <property name="use-markup">True</property>
              </object>
            </child>
          </object>
        </child>
      </object>
      <packing>
        <property name="position">1</property>
      </packing>
    </child>
    <child type="tab">
      <object class="GtkLabel">
        <property name="label" translatable="yes">Editor</property>
      </object>
      <packing>
        <property name="position">1</property>
        <property name="tab-fill">False</property>
      </packing>
    </child>

    <!-- "Window" tab -->
    <child>
      <object class="GtkBox" id="/prefs/window/content-area">
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <property name="margin-top">6</property>
        <property name="margin-bottom">6</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <property name="spacing">6</property>
        <child>
          <object class="GtkFrame" id="/prefs/window/general/frame">
            <child>
              <object class="GtkBox" id="/prefs/window/general/content-area">
                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">12</property>
                <property name="margin-end">6</property>
                <property name="spacing">2</property>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Show status bar</property>
                    <property name="action-name">app.preferences.window.statusbar-visible</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Show full filename in title bar</property>
                    <property name="action-name">app.preferences.window.path-in-title</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Remember window size</property>
                    <property name="action-name">app.preferences.window.remember-size</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Remember window position</property>
                    <property name="action-name">app.preferences.window.remember-position</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Remember window state</property>
                    <property name="action-name">app.preferences.window.remember-state</property>
                  </object>
                </child>
              </object>
            </child>
            <child type="label">
              <object class="GtkLabel">
                <property name="label" translatable="yes">&lt;b&gt;General&lt;/b&gt;</property>
                <property name="use-markup">True</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkFrame" id="/prefs/window/toolbar/frame">
            <child>
              <object class="GtkGrid" id="/prefs/window/toolbar/content-area">
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">12</property>
                <property name="margin-end">6</property>
                <property name="column-spacing">6</property>
                <property name="row-spacing">6</property>
                <child>
                  <object class="GtkCheckButton" id="/prefs/window/toolbar/visible-check">
                    <property name="label" translatable="yes">Show toolbar</property>
                    <property name="action-name">app.preferences.window.toolbar-visible</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                      <!--TODO <property name="width">2</property>-->
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="xalign">0</property>
                    <property name="label" translatable="yes">Style:</property>
                    <property name="sensitive" bind-source="/prefs/window/toolbar/visible-check"
                              bind-property="active" bind-flags="G_BINDING_SYNC_CREATE"/>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="xalign">0</property>
                    <property name="label" translatable="yes">Icon Size:</property>
                    <property name="sensitive" bind-source="/prefs/window/toolbar/visible-check"
                              bind-property="active" bind-flags="G_BINDING_SYNC_CREATE"/>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkComboBox" id="/prefs/window/toolbar/style-combo">
                    <property name="model">/prefs/window/toolbar/style-model</property>
                    <property name="active">0</property>
                    <property name="sensitive" bind-source="/prefs/window/toolbar/visible-check"
                              bind-property="active" bind-flags="G_BINDING_SYNC_CREATE"/>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkComboBox" id="/prefs/window/toolbar/icon-size-combo">
                    <property name="model">/prefs/window/toolbar/icon-size-model</property>
                    <property name="active">0</property>
                    <property name="sensitive" bind-source="/prefs/window/toolbar/visible-check"
                              bind-property="active" bind-flags="G_BINDING_SYNC_CREATE"/>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
            <child type="label">
              <object class="GtkLabel">
                <property name="label" translatable="yes">&lt;b&gt;Toolbar&lt;/b&gt;</property>
                <property name="use-markup">True</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkFrame" id="/prefs/window/notebook/frame">
            <child>
              <object class="GtkBox" id="/prefs/window/notebook/content-area">
                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">12</property>
                <property name="margin-end">6</property>
                <property name="spacing">2</property>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Always show tabs even with one file</property>
                    <property name="action-name">app.preferences.window.always-show-tabs</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label" translatable="yes">Cycled notebook tab switching</property>
                    <property name="action-name">app.preferences.window.cycle-tabs</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
                    <property name="margin-top">2</property>
                    <property name="margin-bottom">0</property>
                    <property name="margin-start">0</property>
                    <property name="margin-end">0</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="xalign">0</property>
                        <property name="label" translatable="yes">Open files in:</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkComboBox" id="/prefs/window/notebook/opening-mode-combo">
                        <property name="model">/prefs/window/notebook/opening-mode-model</property>
                        <property name="active">0</property>
                        <child>
                          <object class="GtkCellRendererText">
                            <property name="wrap-mode">PANGO_WRAP_WORD_CHAR</property>
                            <property name="wrap-width">30</property>
                            <property name="width-chars">20</property>
                            <property name="max-width-chars">30</property>
                          </object>
                          <attributes>
                            <attribute name="text">1</attribute>
                          </attributes>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="label">
              <object class="GtkLabel">
                <property name="label" translatable="yes">&lt;b&gt;Notebook tabs&lt;/b&gt;</property>
                <property name="use-markup">True</property>
              </object>
            </child>
          </object>
        </child>
      </object>
      <packing>
        <property name="position">2</property>
      </packing>
    </child>
    <child type="tab">
      <object class="GtkLabel">
        <property name="label" translatable="yes">Window</property>
      </object>
      <packing>
        <property name="position">2</property>
        <property name="tab-fill">False</property>
      </packing>
    </child>

    <!-- "Plugins" tab -->
    <child>
      <object class="GtkScrolledWindow" id="/prefs/plugins/scrolled-window">
